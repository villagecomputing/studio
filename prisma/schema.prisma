// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Dataset {
  id            Int               @id @default(autoincrement())
  created_at    DateTime          @default(now())
  file_name     String
  file_location String
  file_type     String
  file_size     Int
  total_rows    Int
  deleted_at    DateTime?         // Optional DateTime field
  Dataset_column Dataset_column[]
}

model Dataset_column {
  id          Int                 @id @default(autoincrement())
  created_at  DateTime            @default(now())
  dataset_id  Int
  name        String
  dataType    String              // Assuming this is a string representation of the data type
  type        String              // Assuming this is a string representation of the column type
  deleted_at  DateTime?           // Optional DateTime field
  index       Int
  Dataset     Dataset             @relation(fields: [dataset_id], references: [id], onDelete: Cascade)
  Ground_truth_cell Ground_truth_cell[]
}

model Ground_truth_cell {
  id          Int                 @id @default(autoincrement())
  created_at  DateTime            @default(now())
  index       Int
  status      String              // Assuming this is a string representation of the status
  content     String
  column_id   Int
  Dataset_column Dataset_column   @relation(fields: [column_id], references: [id], onDelete: Cascade)
}

model Log_user_action {
  id          Int                 @id @default(autoincrement())
  created_at  DateTime            @default(now())
  user_id     Int?                // Assuming user_id is optional
  action      String              // Assuming this is a string representation of the user action
}